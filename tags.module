<?php


/**
 * Implementation of hook_menu().
 */
function tags_menu() {
  $items = array();

  $items['tags/dashboard'] = array(
    'page callback' => 'tags_dashboard_page',
    'access callback' => 'user_access',
    'access arguments' => array('manage own tags'),
    'file' => 'tags.pages.inc',
    'type' => MENU_CALLBACK
  );

  $items['tags/vocabulary/%/ajax'] = array(
    'page callback' => 'tags_vocabulary_ajax',
    'page arguments' => array(2),
    'access callback' => 'user_access',
    'access arguments' => array('manage own tags'),
    'file' => 'tags.pages.inc',
    'type' => MENU_CALLBACK
  );

  return $items;
}

/**
 * Implementation of hook_perm().
 */
function tags_perm() {
  $perms = array(
    'manage own tags',
  );
  return $perms;
}

/**
 * Implementation of hook_theme()
 */
function tags_theme() {
  return array(
    'tags_dashboard_page' => array(
      'template' => 'template/dashboard-page',
      'arguments' => array('data'=> NULL),
    ),

    'tags_vocabulary' => array(
      'template' => 'template/vocabulary',
      'arguments' => array('data'=> NULL),
    ),
  );
}